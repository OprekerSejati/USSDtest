<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.multipilarbalantika.ussdtest.MainActivity">

    <Button
        android:id="@+id/cek_last_transaction_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cek_last_transaction"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pln_pasca_transaction_button" />

    <Button
        android:id="@+id/pln_pra_transaction_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cek_last_transaction_button"
        android:layout_marginStart="16dp"
        android:text="@string/pln_pra_transaction" />

    <Button
        android:id="@+id/pln_pasca_transaction_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pln_pra_transaction_button"
        android:layout_marginStart="16dp"
        android:text="@string/pln_pasca_transaction" />

    <TextView
        android:id="@+id/response_ussd_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ussd_response"
        android:layout_below="@+id/pln_pasca_transaction_button"
        android:layout_marginTop="76dp" />


</RelativeLayout>
